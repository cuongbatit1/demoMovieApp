<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/_30dp">

    <TextView
        android:id="@+id/text_title_item_title_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_bold"
        android:gravity="top"
        android:maxLines="3"
        android:textColor="@color/color_3E4A59"
        android:textSize="20sp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        tools:text="Justice League"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_detail_item_title_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/helvetica_regular"
        android:gravity="top"
        android:maxLines="5"
        android:textColor="@color/color_4A4A4A"
        android:textSize="14sp"
        tools:text="Justice League"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/text_title_item_title_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_read_more_item_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="top"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/color_007AD9"
        android:textSize="10sp"
        android:text="@string/key_read_more"
        android:padding="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/text_detail_item_title_detail"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?selectableItemBackground"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_favotite"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50dp"
        app:layout_constraintTop_toBottomOf="@id/text_read_more_item_title_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_75dp"
        android:layout_marginEnd="@dimen/_75dp"
        app:cardBackgroundColor="@color/color_BACDE7"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardCornerRadius="@dimen/_6dp"
        android:foreground="?selectableItemBackground"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_ic_add_item_title_detail"
                android:layout_width="@dimen/_18dp"
                android:layout_height="@dimen/_18dp"
                android:background="@drawable/ic_add_vector"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_20dp"/>

            <TextView
                android:id="@+id/text_favorite_item_title_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_bold"
                android:maxLines="3"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:text="@string/key_favorite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/line_item_title_detail"
                app:layout_constraintStart_toEndOf="@id/image_ic_add_item_title_detail"
                android:background="?selectableItemBackground"/>

            <View
                android:id="@+id/line_item_title_detail"
                android:layout_width="@dimen/_2dp"
                android:layout_height="@dimen/_20dp"
                android:background="@color/white"
                android:layout_marginEnd="@dimen/_16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/image_ic_triangle_down_item_title_detail"/>

            <ImageView
                android:id="@+id/image_ic_triangle_down_item_title_detail"
                android:layout_width="@dimen/_12dp"
                android:layout_height="@dimen/_10dp"
                android:background="@drawable/ic_triangle_down_vector"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
