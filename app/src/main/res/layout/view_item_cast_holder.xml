<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_image_cast_movie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_title_cast_movie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="@dimen/_5dp"
        app:cardCornerRadius="@dimen/_6dp"
        tools:cardBackgroundColor="@color/red"
        android:layout_marginBottom="@dimen/_5dp"
        android:foreground="?selectableItemBackground">

        <ImageView
            android:id="@+id/image_cast_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_title_cast_movie"
        android:layout_width="0dp"
        android:layout_height="@dimen/_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_cast_cast_movie"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="None Holder"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="center|left"
        android:textColor="@color/color_4A4A4A"
        android:textSize="12sp"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="4sp"
        app:autoSizeStepGranularity="0.5sp"/>

    <TextView
        android:id="@+id/text_cast_cast_movie"
        android:layout_width="0dp"
        android:layout_height="@dimen/_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="None "
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/helvetica_regular"
        android:gravity="center|left"
        android:textColor="@color/color_9B9B9B"
        android:textSize="12sp"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="4sp"
        app:autoSizeStepGranularity="0.5sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
