<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_image_avatar_comment"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp">

        <ImageView
            android:id="@+id/image_avatar_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_name_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/layout_image_avatar_comment"
        app:layout_constraintStart_toEndOf="@id/layout_image_avatar_comment"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="None Holder"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="left|center"
        android:textColor="@color/color_4A4A4A"
        android:textSize="12sp"
        android:layout_marginStart="@dimen/_10dp"/>

    <TextView
        android:id="@+id/text_message_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_name_comment"
        app:layout_constraintStart_toEndOf="@id/layout_image_avatar_comment"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="30"
        android:ellipsize="end"
        tools:text="None Holder"
        android:fontFamily="@font/helvetica_regular"
        android:gravity="left|center"
        android:textColor="@color/color_4A4A4A"
        android:textSize="10sp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_2dp"/>

    <TextView
        android:id="@+id/text_rate_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center|top"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/color_F1CA23"
        android:textSize="15sp"
        tools:text="4.0"
        android:layout_marginTop="@dimen/_6dp"
        android:layout_marginStart="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/text_message_comment"
        app:layout_constraintStart_toEndOf="@id/layout_image_avatar_comment"/>

    <RatingBar
        android:id="@+id/ratingBar_item_rate"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:isIndicator="true"
        android:numStars="10"
        android:rating="0"
        android:stepSize="0.1"
        android:minHeight="20dp"
        android:maxHeight="20dp"
        android:theme="@style/ThemeRatingBar"
        android:layout_marginStart="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="@id/text_rate_comment"
        app:layout_constraintStart_toEndOf="@id/text_rate_comment"/>

    <TextView
        android:id="@+id/text_time_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_rate_comment"
        app:layout_constraintStart_toEndOf="@id/layout_image_avatar_comment"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="30"
        android:ellipsize="end"
        tools:text="None Holder"
        android:fontFamily="@font/helvetica_regular"
        android:gravity="left|center"
        android:textColor="@color/color_4A4A4A"
        android:textSize="10sp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_2dp"/>
    
    <ImageView
        android:id="@+id/icon_title_holder"
        android:layout_width="@dimen/_22dp"
        android:layout_height="@dimen/_22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_arrow_blue"
        android:layout_marginEnd="@dimen/_16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
