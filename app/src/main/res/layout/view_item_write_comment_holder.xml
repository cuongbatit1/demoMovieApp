<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/_20dp">

    <RatingBar
        android:id="@+id/ratingBar_item_write_comment"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:minHeight="35dp"
        android:maxHeight="35dp"
        android:theme="@style/ThemeRatingBar"
        android:layout_marginTop="@dimen/_6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_rate_item_write_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center|top"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/color_9B9B9B"
        android:textSize="18sp"
        tools:text="4.0"
        android:layout_marginTop="@dimen/_6dp"
        app:layout_constraintTop_toBottomOf="@id/ratingBar_item_write_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_write_a_comment"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_34dp"
        app:layout_constraintTop_toBottomOf="@id/text_rate_item_write_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/color_007AD9"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardCornerRadius="@dimen/_6dp"
        android:foreground="?selectableItemBackground"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_favorite_item_title_detail"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_bold"
                android:maxLines="3"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center"
                android:text="@string/key_write_a_comment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingLeft="@dimen/_30dp"
                android:paddingRight="@dimen/_30dp"
                android:background="?selectableItemBackground"
                android:textAllCaps="true"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
