<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/_40dp">

    <TextView
        android:id="@+id/text_rate_item_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center|top"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/color_F1CA23"
        android:textSize="15sp"
        tools:text="4.0"
        android:layout_marginTop="@dimen/_6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_left_rate_holder"/>

    <RatingBar
        android:id="@+id/ratingBar_item_rate"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:minHeight="20dp"
        android:maxHeight="20dp"
        android:theme="@style/ThemeRatingBar"
        android:layout_marginTop="@dimen/_6dp"
        android:layout_marginStart="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_rate_item_rate"/>

    <TextView
        android:id="@+id/text_time_item_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/helvetica_regular"
        android:maxLines="2"
        android:textColor="@color/color_3E4A59"
        android:textSize="12sp"
        tools:text="4.0"
        android:layout_marginTop="@dimen/_6dp"
        app:layout_constraintTop_toBottomOf="@id/text_rate_item_rate"
        app:layout_constraintStart_toStartOf="@id/guideline_left_rate_holder"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_us_item_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        app:cardBackgroundColor="@color/color_007AD9"
        app:cardCornerRadius="@dimen/_8dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/text_time_item_rate"
        app:layout_constraintStart_toStartOf="@id/guideline_left_rate_holder">

        <TextView
            android:id="@+id/tv_us_item_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="@font/helvetica_regular"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingStart="@dimen/_11dp"
            android:paddingTop="@dimen/_2dp"
            android:paddingEnd="@dimen/_11dp"
            android:paddingBottom="@dimen/_5dp"
            android:text="@string/key_us"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_action_item_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        app:cardBackgroundColor="@color/color_007AD9"
        app:cardCornerRadius="@dimen/_8dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        android:layout_marginStart="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/text_time_item_rate"
        app:layout_constraintStart_toEndOf="@id/card_us_item_rate">

        <TextView
            android:id="@+id/tv_action_item_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="@font/helvetica_regular"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingStart="@dimen/_11dp"
            android:paddingTop="@dimen/_2dp"
            android:paddingEnd="@dimen/_11dp"
            android:paddingBottom="@dimen/_5dp"
            android:text="@string/key_action"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_rate_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />


</androidx.constraintlayout.widget.ConstraintLayout>
