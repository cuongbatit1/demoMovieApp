<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_fragment"
    tools:context=".fragment.FragSplashScreen">

    <ImageView
        android:id="@+id/logo_splash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/logo_splash"
        app:layout_constraintDimensionRatio="@string/value_ratio_logo_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_top_logo_splash"
        android:layout_marginStart="@dimen/_100dp"
        android:layout_marginEnd="@dimen/_100dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_logo_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>